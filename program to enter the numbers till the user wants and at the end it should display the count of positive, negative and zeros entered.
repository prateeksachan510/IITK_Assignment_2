import java.util.Scanner;
public class Count_Check
{
    public static void main()
    {
        int n,i,c_pos=0,c_neg=0,c_zero=0;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the no.s till user wants to enter");
        int ch= sc.nextInt();
        for(i=1;i<=ch;i++)
        {
            n=sc.nextInt();
            if(n>0)
                c_pos++;
            else if (n<0)
                c_neg++;
            else if (n==0)
                c_zero++;
        }
        System.out.println("Psitive no.s entered::"+c_pos);
        System.out.println("Negetive no.s entered::"+c_neg);
        System.out.println("Zeros Entered::"+c_zero);

        }
    }

