import java.util.Scanner;
public class Counter
{
    public static void main()
    {
        int n,c=0,x;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a whose digits is to be counted");
        n=sc.nextInt();
        x=n;
        while(n>0)
        {
            c++;
            n=n/10;
        }
        System.out.println("No. of Digits in "+x+" =="+c);
    }
}
