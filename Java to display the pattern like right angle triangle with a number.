import java.util.Scanner;
public class Ri_Triangle
{
    public static void main()
    {
        int i,j,n;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter no. of lines in right triangle pattern");
        n=sc.nextInt();
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=i;j++)
                System.out.print(j+" ");
            System.out.println();
        }
    }
}
